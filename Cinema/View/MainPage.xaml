<Page x:Class="Cinema.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema.View"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="Расписание">

    <Grid Background="#543964">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="854" Height="55">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="164"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource DateButtons}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="TodayTextBlock" TextAlignment="Center" FontSize="20"></TextBlock>
                    <TextBlock x:Name="TodayDateTextBlock" TextAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource DateButtons}"  Grid.Column="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="TomorrowTextBlock" TextAlignment="Center" FontSize="20"></TextBlock>
                    <TextBlock x:Name="TomorrowDateTextBlock" TextAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource DateButtons}" Grid.Column="2">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="DayThreeTextBlock" TextAlignment="Center" FontSize="20"></TextBlock>
                    <TextBlock x:Name="DayThreeDateTextBlock" TextAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource DateButtons}" Grid.Column="3">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="DayFourTextBlock" TextAlignment="Center" FontSize="20"></TextBlock>
                    <TextBlock x:Name="DayFourDateTextBlock" TextAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource DateButtons}" Grid.Column="4">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="DateTextBlock" TextAlignment="Center" FontSize="15" Background="Transparent" Width="120"></TextBlock>
                    <DatePicker x:Name="PickDatePicker" Width="30" Visibility="Visible" FlowDirection="LeftToRight" FirstDayOfWeek="Monday" BorderBrush="Transparent"/>
                </StackPanel>
            </Button>
            <ComboBox x:Name="FiltersComboBox" Grid.Column="6" Text="Фильтры"/>




        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <ListView x:Name="FilmsListView" HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="#543964">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Aqua" CornerRadius="5" BorderThickness="2" Padding="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="7*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="8*"/>
                                </Grid.RowDefinitions>
                                <Image Grid.RowSpan="3"/>
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <TextBlock x:Name="NameFilmTextBlock" Style="{StaticResource YellowText}" Text="{Binding}" FontSize="24" FontWeight="SemiBold"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="692"/>
                                        </Grid.ColumnDefinitions>
                                        <Border CornerRadius="50" BorderBrush="White" Width="30">
                                            <TextBlock x:Name="AgeTextBlock" Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" Orientation="Vertical">
                                            <TextBlock x:Name="GenresTextBlock" Text="{Binding}"/>
                                            <TextBlock x:Name="DurationTextBlock" Text="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel x:Name="SessionsStackPanel" Width="120" Orientation="Vertical">
                                        <TextBlock x:Name="FormatTextBlock" Text="{Binding}"/>
                                        <TextBlock x:Name="HallTextBlock" Text="{Binding}"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock x:Name="TimeTextBlock" Style="{StaticResource YellowText}" Text="{Binding}"/>
                                            <TextBlock x:Name="CostTextBlock" Text="{Binding CostTicket, StringFormat={}{0:F0} ₽}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
