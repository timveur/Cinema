<Page x:Class="Cinema.Views.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="LoginTextBox" Height="25" VerticalContentAlignment="Center"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="AuthPasswordBox" Height="25" VerticalContentAlignment="Center"></PasswordBox>
            <Button x:Name="LoginButton" Margin="0 30 0 10" Height="30" FontSize="16">Войти</Button>
            <TextBlock x:Name="RegTextBlock" MouseLeftButtonDown="RegTextBlockMouseLeftButtonDown" FontSize="12">Зарегистрироваться</TextBlock>
        </StackPanel>
    </Grid>
</Page>
